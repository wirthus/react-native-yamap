{
  "compilerOptions": {
    "baseUrl": "./src",
    "rootDir": "./src",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "esnext"
    ],
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "sourceMap": true,
    "skipLibCheck": true
  },
  "include": [
    ".eslintrc.js",
    "src/**/*",
  ],
  "exclude": [
    "example",
    "node_modules"
  ]
}
